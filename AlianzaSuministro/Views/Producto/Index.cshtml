@model IEnumerable<AlianzaSuministro.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Producto</h1>

<form asp-controller="Producto" asp-action="Index" method="get">
    <div class="row my-1">
        <div class="col d-flex align-items-center px-0">
            <label class="mx-1">Clave:</label>
            <input class="mx-1 form-control" type="text" name="searchProduct" />
        </div>
        <div class="col d-flex align-items-center px-0">
            <label class="mx-1 w-25">Tipo Producto:</label>
            <select class="form-select" name="tipoProductoId" asp-items="ViewBag.TipoProductoId">
                <option value="">Todos</option>
            </select>
        </div>
    </div>
    <div class="row d-flex justify-content-end">
        <input class="btn btn-primary w-auto mx-1" type="submit" value="Buscar" />
    </div>
</form>

<div class="row table-container my-3">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Clave)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoProducto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EsActivo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Precio)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Clave)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoProducto.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EsActivo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        <i class="bi bi-pencil-square mx-1" onclick="location.href='@Url.Action("Edit", new { id = item.Id })'" style="cursor: pointer;" data-bs-toggle="tooltip" data-bs-placement="top" title="Editar"></i>
                        <i class="bi bi-trash mx-1" onclick="location.href='@Url.Action("Delete", new { id = item.Id })'" style="cursor: pointer;" data-bs-toggle="tooltip" data-bs-placement="top" title="Eliminar"></i>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="row d-flex justify-content-end">
    <button class="btn btn-primary w-auto" onclick="location.href='@Url.Action("Create")'">Agregar Producto</button>
</div>
